<%= form_for @employment do |f| %>

  <div class="form-group">
    <%= f.label :person_id %>
    <em><%= f.collection_select(:person_id, Person.all, :id, :full_name, {}, {class: 'form-control'}) %></em>
  </div>

  <div class="form-group">
    <%= f.label :organization_id %>
    <em><%= f.collection_select(:organization_id, Organization.all, :id, :name, {include_blank: true}, {class: 'form-control'}) %></em>
  </div>

  <div class="form-group">
    <%= f.label :job_title_id %>
    <em><%= f.collection_select(:job_title_id, JobTitle.all, :id, :name, {include_blank: "Select a title, yo!" }, {class: 'form-control'}) %>
</em>
  </div>

  <div class="form-group">
    <%= f.label :location_id %>
    <em><%if params[:action] == "edit" %>

          <%= f.collection_select(:location_id, Location.all, :id, :name, {}, {class: 'form-control'}) %>
        <% else %>

          <%= f.collection_select(:location_id, Location.all, :id, :name, {include_blank: true }, {class: 'form-control'}) %>
        <% end %></em>
  </div>

  <p>
    <%= f.submit class: "btn btn-primary" %>
  </p>

<% end %>
